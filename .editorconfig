root = true

# Apply to all files
[*]
end_of_line = lf
indent_style = space
trim_trailing_whitespace = true

# Scripting/programming language rules
[*.{py,java,hpp,h,c,cpp,go,js}]
insert_final_newline = true
indent_size = 4

# Extra insert_final_newline's
[*.{md,gitignore}]
insert_final_newline = true

# Web language rules
[*.{html,yaml,yml,json,css,md}]
indent_size = 2